<?xml version="1.0"?>
<!--https://github.com/squizlabs/PHP_CodeSniffer/wiki/Advanced-Usage#using-a-default-configuration-file-->
<ruleset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="Test Standard" xsi:noNamespaceSchemaLocation="phpcs.xsd">
    <description>The coding standard for Test.</description>

    <file>app</file>
    <file>tests</file>

    <rule ref="PSR12" />

    <rule ref="PSR1.Methods.CamelCapsMethodName">
        <exclude-pattern>*Test.php</exclude-pattern>
    </rule>
</ruleset>
